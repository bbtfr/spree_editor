<script src="/assets/admin/tiny_mce/tiny_mce.js" type="text/javascript"></script>
<script src="/assets/editors/config.js" type="text/javascript"></script>

<script type="text/javascript">
  $(function() {
    var ids = [<%= raw ids.map{|id| "'textarea##{id}'"}.join(', ') %>], els = [];
    $(ids.join(', ')).each(function() {
      els.push(this.id);
    });
    if (typeof Editors !== 'object') { Editors = {} }
    tinyMCE.init($.extend(Editors.TinyMCE, {
      mode: "exact",
      elements: els.join(', '),
    }));
  });
</script>
