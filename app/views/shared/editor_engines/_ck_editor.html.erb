<script type="text/javascript">
var CKEDITOR_BASEPATH = '/assets/admin/ckeditor/';
</script>
<script src="/assets/admin/ckeditor/ckeditor.js" type="text/javascript"></script>
<script src="/assets/editors/config.js" type="text/javascript"></script>

<script type="text/javascript">
  $(function() {
    var ids = [<%= raw ids.map{|id| "'textarea##{id}'"}.join(', ') %>];
    if (typeof Editors != 'object') { Editors = {}; }
    $(ids.join(', ')).each(function() {
      CKEDITOR.replace(this.id, Editors.CKEditor);
    });
  });
</script>
